<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/nav_grupolustur_groupnamename"
                android:layout_width="387dp"
                android:layout_height="46dp"
                android:text="Grup Adı"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Grup Simgesi"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/nav_grupolustur_groupImageImageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/messageapp_logo" />

            <TextView
                android:id="@+id/nav_grupolustur_grupdescription"
                android:layout_width="397dp"
                android:layout_height="81dp"
                android:layout_marginTop="8dp"
                android:text="Açıklama"
                android:textColor="#000000" />

            <Button
                android:id="@+id/nav_grupolustur_createGroupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Grup oluştur" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gruplar"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:id="@+id/nav_grupolustur_groupsRecyclerView"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:padding="8dp"
            android:text="201913709055 - Berkay Yakup Sevim" />
    </LinearLayout>
</FrameLayout>